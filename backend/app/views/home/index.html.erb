<div class="home">
  <%= render "shared/moving_bar", texts: [
    t('slogan2'),
    t('slogan3'),
    t('slogan4'),
  ] %>
  <%# SecciÃ³n del video %>
  <div class="video-container">
    <video autoplay muted loop id="background-video" class="w-100">
      <source src="<%= asset_path('bg-home.mp4') %>" type="video/mp4">
      Tu navegador no soporta este formato de video.
    </video>

    <%# Contenido encima del video %>
    <div class="container text-center position-relative" style="height: 100vh;">
      <div class="d-flex flex-column align-items-center justify-content-start h-100 mt-6">
        <p class="fs-3 fw-bold text-white text-uppercase"><%= t('title') %></p>
        <h1 class="title fw-bold display-3 mb-4 text-white"><%= t('slogan') %></h1>
        <a href="#categories" class="btn custom-btn btn-lg">
          <span class="d-flex align-items-center gap-2">
            <%= t('info') %> <span class="fs-2 arrow-icon">&gt;</span>
          </span>
        </a>
      </div>
    </div>
  </div>
  <%= render "shared/moving_bar", texts: [
    t('slogan2'),
    t('slogan3'),
    t('slogan4'),
  ] %>
  <% if @categories.present? %>
    <div class="container-fluid min-vh-100 text-center position-relative py-5 p-6" id="categories">
      <h2 class="pb-5 fw-bold subtittle"><%= t('categories') %></h2>

      <div class="scroll-wrapper">
        <div class="row flex-nowrap flex-md-wrap justify-content-start justify-content-lg-center">
          <% @categories.each do |category| %>
            <div class="m0 col-10 col-md-6 col-lg-3 mb-3 px-2 d-flex justify-content-center">
              <%= link_to category_products_path(category), class: "inverse-box w-100 h-100", style: "max-width: 300px;" do %>
                <% if category.image.attached? %>
                  <%= image_tag category.image, class: "category-image" %>
                <% else %>
                  <%= image_tag "placeholder.svg", class: "img-fluid", style: "height: 200px; object-fit: cover;" %>
                <% end %>
                <div class="box-mini2">
                  <div class="bg-box d-flex justify-content-between align-items-center border-1">
                    <div class="mt-3">
                      <p class="fs-7 text-uppercase"><%= category.name %></p>
                    </div>
                    <i class="bi bi-arrow-right flecha fs-5"></i>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
