<h1 class="mb-4 text-center">Users</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Ciudad</th>
      <th>Direcci√≥n</th>
      <th>Email</th>
      <th>Creado</th>
      <th>Rol</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.city %></td>
        <td><%= user.address %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= user.admin? ? "Admin" : "User" %></td>
        <td>
          <%= link_to 'Ver', admin_user_path(user), class: 'btn btn-sm btn-info me-2' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4">
  <%= link_to 'Agregar Usuario', new_admin_user_path, class: 'btn btn-success' %>
</div>
