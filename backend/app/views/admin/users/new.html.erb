<h1 class="text-center">Nuevo Usuario</h1>

<%= form_with model: [:admin, @user], local: true do |form| %>

  <%= render 'shared/form_errors', object: @user %>

  <div class="mb-3">
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :last_name, "Apellido" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :city, "Ciudad" %>
    <%= form.text_field :city, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :address, "Dirección" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, "Email" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :password, "Contraseña" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :role, "Rol" %>
    <%= form.select :role, [['Usuario', 'user'], ['Administrador', 'admin']], {}, class: "form-select" %>
  </div>

  <%= form.submit "Crear Usuario", class: "btn btn-success" %>
  <%= link_to "Cancelar", admin_users_path, class: "btn btn-secondary ms-2" %>
<% end %>
