<% highlight ||= false %>
<div class="barra-texto ">
  <div class="contenedor-textos <%= highlight ? 'color-' : 'color-white' %>">
    <% full_texts = (texts * 3) %>
    <% (full_texts + full_texts).each_with_index do |txt, index| %>
      <span class="texto text-uppercase <%= highlight ? 'color-red' : 'color-white' %>">
        <%= txt %>
        <% unless index == (full_texts + full_texts).size - 1 %>
          <span class="separador <%= highlight ? 'color-red' : 'color-white' %>">‚óè</span>
        <% end %>
      </span>
    <% end %>
  </div>
</div>
