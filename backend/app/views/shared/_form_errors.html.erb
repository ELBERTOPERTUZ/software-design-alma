<% if object.errors.any? %>
  <div class="mt-3 d-flex flex-column gap-2">
    <% object.errors.full_messages.each do |message| %>
      <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm px-3 py-2" role="alert">
        <%= message %>
      </div>
    <% end %>
  </div>

  <%= javascript_tag do %>
    document.addEventListener("DOMContentLoaded", function() {
      setTimeout(function() {
        document.querySelectorAll(".alert").forEach(function(alert) {
          alert.style.transition = "opacity 0.5s, height 0.5s, margin 0.5s, padding 0.5s";
          alert.style.opacity = 0;
          alert.style.height = 0;
          alert.style.margin = 0;
          alert.style.padding = 0;
          setTimeout(function() {
            alert.remove();
          }, 0); // esperar a que termine la animaci√≥n
        });
      }, 2000);
    });
  <% end %>
<% end %>
